{% set block_full_article_info__base_class = 'block-full-article' %}

<div class=" {{ text_with_media__attributes }}">
  <div {{ bem('inner', [], text_with_media__base_class) }}>
    <div {{ bem('image', [], text_with_media__base_class) }}">
      <img src="{{ block_full_block_full_image_src }}"  alt="{{ block_full_text_title }}">
  </div>
  <div {{ bem('category', [], text_with_media__base_class) }}>
    <a class="category" href="{{ block_full_category_url }}">
      {{ block_full_category }}
    </a>
  </div>
  <div {{ bem('column', [], text_with_media__base_class) }}>
    <div {{ bem('content', [], text_with_media__base_class) }}">
    {{ block_full_text_title }}
  </div>
  <div {{ bem('author', [], text_with_media__base_class) }}>
    {{ block_full_author }}
  </div>
  <div {{ bem('data', [], text_with_media__base_class) }}>
    {{ block_full_text_data }}
  </div>
  <div {{ bem('count', [], text_with_media__base_class) }}>
    {{ block_full_comment_count }}
  </div>
  <div {{ bem('body', [], text_with_media__base_class) }}>
    {{ block_full_body }}
  </div>
</div>
